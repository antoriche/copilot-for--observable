{
  "manifest_version": 3,

  "name": "Web-Extension-Template",
  "description": "Chrome Extension using TypeScript",
  "version": "1.0",
  "author": "Divyanshu Shekhar",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "128": "assets/icons/icon128.png"
  },

  "action": {
    "default_icon": "./assets/icons/icon16.png",
    "default_popup": "popup.html"
  },

  "permissions": ["storage"],

  "host_permissions": ["*://observablehq.com/d/*"],

  "content_scripts": [
    {
        "matches": ["*://observablehq.com/d/*"],
        "js": ["scripts/entrypoint.js"]
    }
],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}
